<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="Actuate_FeaturedCategories" translate="label" sortOrder="100">
            <label>Actuate</label>
        </tab>
        <section id="featuredcategories" translate="label" type="text" sortOrder="5"
                 showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Category Slider</label>
            <tab>Actuate_FeaturedCategories</tab>
            <resource>Actuate_FeaturedCategories::featured_categories_settings</resource>
            <group id="general" translate="label" type="text" sortOrder="10"
                   showInDefault="1" showInWebsite="1" showInStore="0">
                <label>General</label>
                <field id="slider" translate="label" type="select" sortOrder="1"
                       showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Categories Slider enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
        <section id="manufacturer" translate="label" type="text" sortOrder="5"
                 showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Manufacturer</label>
            <tab>Actuate_FeaturedCategories</tab>
            <resource>Actuate_FeaturedCategories::featured_categories_settings</resource>
            <group id="general" translate="label" type="text" sortOrder="10"
                   showInDefault="1" showInWebsite="1" showInStore="0">
                <label>General</label>
                <field id="excludeManufacturer" translate="label" type="textarea" sortOrder="1"
                       showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Exclude Manufacturer on PDP</label>
                    <comment>
                        <![CDATA[Add value with comma separated.]]>
                    </comment>
                </field>
            </group>
        </section>
    </system>
</config>
