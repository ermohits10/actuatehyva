<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="actuate_options" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="20" translate="label">
            <label>Options Tooltip Mappings</label>
            <tab>Actuate_FeaturedCategories</tab>
            <resource>Actuate_Option::checkout</resource>
            <group id="general" translate="label comment" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <field id="tooltip" translate="label" sortOrder="15" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Map Tooltip CMS with option</label>
                    <frontend_model>Actuate\Option\Block\Adminhtml\Form\Field\Options</frontend_model>
                    <backend_model>Magento\Config\Model\Config\Backend\Serialized\ArraySerialized</backend_model>
                </field>
            </group>
        </section>
    </system>
</config>
